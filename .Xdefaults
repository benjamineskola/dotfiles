! vim:ft=xdefaults
! .xresources: config for stuff old enough (or luddite enough) to still use it.

URxvt*background: black
URxvt*foreground: lightgrey
URxvt*font: xft:DejaVu Sans Mono:pixelsize=12,xft:unifont
URxvt*scrollBar: false
URxvt*secondaryScreen: false
URxvt*secondaryScroll: false
URxvt*urgentOnBell: true
URxvt*cutchars: '"'()*,<>[]{}|"'"
URxvt*termName: rxvt

URxvt.perl-lib: /home/bma/.config/urxvt/
URxvt.perl-ext: keyboard-select,url-select
URxvt.keysym.Mod4-Escape: perl:keyboard-select:activate
URxvt.keysym.Mod4-u: perl:url-select:select_next
URxvt.urlLauncher: www
URxvt.underlineURLs: true

UXTerm*foreground: lightgrey
UXTerm*background: black
UXTerm*metaSendsEscape: true
UXTerm*faceName: DejaVu Sans Mono
UXTerm*faceSize: 8

xpdf.initialZoom: width
