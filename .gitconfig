# vim:ft=gitconfig
[branch]
	autosetuprebase = always
[color]
	diff = auto
	status = auto
	branch = auto
[core]
	editor = vimr --wait -s
	excludesfile = ~/.gitignore.global
[diff]
	renames = copy
[hub]
	protocol = https
[merge]
	tool = diffmerge
[mergetool]
	prompt = false
[push]
	default = current
[user]
	name = Benjamin Eskola
	email = ben@eskola.me.uk
[alias]
	a = add
	ap = add -p
	amend = commit --amend -CHEAD
	br = branch -a
	ci = commit
	co = checkout
	d = diff -M
	dc = diff -M --cached
	l = log -M --graph --decorate --abbrev-commit
	merge = merge
	new = checkout -b
	nuke = reset --hard
	p = push
	reb = rebase
	sh = show
	st = status -sb
	undo = checkout HEAD --
	undop = checkout -p --
	up = pull --rebase --autostash
