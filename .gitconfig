# vim:ft=gitconfig
[alias]
	st = status -sb
	co = checkout
	ci = commit
	l = log -M --graph --decorate --pretty=oneline --abbrev-commit
	la = log -M --graph --all --decorate --pretty=oneline --abbrev-commit
	pp = "!sh -c 'if [ $0 = sh ];then i="";else i=$0;fi; git pull $i $@ && git push $i $@'"
	di = diff -M
	dw = diff --color-words -M
	dc = diff --cached -M
	dwc= diff --cached --color-words -M
[color]
	diff = auto
	status = auto
	branch = auto
[merge]
	tool = vimdiff3
[mergetool "vimdiff3"]
	cmd = vim -f -d -c \"wincmd J\" \"$MERGED\" \"$LOCAL\" \"$BASE\" \"$REMOTE\"
[push]
	default = tracking
