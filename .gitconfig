[alias]
	st = status -sb
	ci = commit
	l = log -M --graph --decorate --pretty=oneline --abbrev-commit
	la = log -M --graph --all --decorate --pretty=oneline --abbrev-commit
	pp = "!sh -c 'git pull && git push'"
	dw = diff --color-words
	dc = diff --cached
	dwc= diff --cached --color-words
	unstage = reset HEAD --
	not-in = "!sh -c 'for i in `git branch|grep [0-9]|cut -c 2-`; do l=`git log $0..$i|wc -l`; if [ $l -gt 0 ]; then echo $i; fi; done'"
	co = checkout -f
	req-merge = "!sh -c 'git pull git@git.mendeley.com:system-scripts/puppet-manifests.git refs/merge-requests/$0'"
[color]
	diff = auto
	status = auto
	branch = auto
[merge]
	tool = emerge
[merge "tool"]
	cmd = emacsclient -t -a \"\" -e \"(emerge-files-with-ancestor $LOCAL $REMOTE $BASE $MERGED)\"
