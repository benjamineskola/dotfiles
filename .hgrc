[alias]
log = log -Gf
l = log
pull = pull --update
up = pull
sh = show

[ui]
username = Benjamin Eskola <ben@eskola.me.uk>
ignore.global = ~/.gitignore.global
logtemplate = "commit {label('yellow',node|short)}:{label('yellow',rev)} {label('red', branches)} {label('red', tags)} \nAuthor: {author}\nDate: {date|date}\n\n\t{desc|strip|fill68|tabindent}\n\n"
merge = vimdiff
editor = vimr --wait

[extensions]
hgext.bookmarks =
hggit =
rebase =
record =
shelve =
show = ~/Code/hgext/show.py
strip =

[merge-tools]
vimdiff.executable = vim
vimdiff.args = -f -d $output -M $local $base $other -c "wincmd J" -c "set modifiable" -c "set write"
vimdiff.premerge = keep
