[DEFAULT]
include = cat ~/src/mr/lib/* 2>/dev/null || true

[Code/ThirdParty/mr]
checkout = git clone git://git.kitenet.net/mr

[.]
checkout = git clone git@git:bma/config
fixups = .config/install.sh

[bin]
checkout = git clone git@git:bma/bin
fixups = ln -sf ../Code/ThirdParty/mr/mr ~/bin

[.vim/bundle/vundle]
checkout = git clone https://github.com/gmarik/vundle.git
fixups = vim +BundleInstall +qall
