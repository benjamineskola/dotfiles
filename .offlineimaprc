# vim:ft=dosini
[general]
accounts = Fastmail

[Account Fastmail]
localrepository = Local
remoterepository = Fastmail

[Repository Local]
type = Maildir
localfolders = ~/mail
nametrans = lambda n: n not in ['INBOX'] and 'INBOX.' + n or n

[Repository Fastmail]
type = IMAP
ssl = on
remoteuser = bma@fastmail.fm
remotehost = mail.messagingengine.com
sslcacertfile = /etc/ssl/certs/ca-certificates.crt
maxconnections = 3
nametrans = lambda n: re.sub(r'^INBOX\.', '', n)
