case "$1" in
	add|co|checkout)
		if [[ "$2" = "-p" ]]; then
			echo "Use 'git addp'/'git undo'"
			return 1
		else
			command git "$@"
		fi
		;;
	ci)
		if [[ "$@" =~ "--amend" ]]; then
			echo "Use 'git amend'"
			return 1
		else
			command git "$@"
		fi
		;;
	diff)
		echo "Use git d"
		return 1
		;;
	pull|up)
		shift
		(
			chruby 2
			command git up "$@"
		)
		;;
	*)
		command git "$@"
		;;
esac
