<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN"  "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
  <dict>
    <key>Label</key>
    <string>uk.eskola.crondaily</string>
    <key>ProgramArguments</key>
    <array>
      <string>/usr/local/bin/fdautil</string>
      <string>exec</string>
      <string>/bin/sh</string>
      <string>-c</string>
      <string>{{ config_dir }}/scripts/run-dir.sh {{ config_dir }}/cron.d/daily {{ config_dir }}/private/cron.d/daily</string>
    </array>
    <key>StandardErrorPath</key>
    <string>{{ home }}/Library/Logs/uk.eskola.crondaily.err</string>
    <key>StandardOutPath</key>
    <string>{{ home }}/Library/Logs/uk.eskola.crondaily.out</string>
    <key>StartCalendarInterval</key>
    <dict>
      <key>Hour</key>
      <integer>7</integer>
      <key>Minute</key>
      <integer>0</integer>
    </dict>
    <key>EnvironmentVariables</key>
    <dict>
      {% for key, value in env.items() %}
      <key>{{ key }}</key>
      <string>{{ value }}</string>
      {% endfor %}
    </dict>
  </dict>
</plist>
