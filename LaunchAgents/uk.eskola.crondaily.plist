<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN"  "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
  <dict>
    <key>Label</key>
    <string>uk.eskola.crondaily</string>
    <key>ProgramArguments</key>
    <array>
      <string>/usr/local/bin/fdautil</string>
      <string>exec</string>
      <string>/bin/sh</string>
      <string>-c</string>
      <string>$XDG_CONFIG_HOME/scripts/run-dir.sh $XDG_CONFIG_HOME/cron.d/daily $XDG_CONFIG_HOME/private/cron.d/daily</string>
    </array>
    <key>StandardErrorPath</key>
    <string>$HOME/Library/Logs/uk.eskola.crondaily.err</string>
    <key>StandardOutPath</key>
    <string>$HOME/Library/Logs/uk.eskola.crondaily.out</string>
    <key>StartCalendarInterval</key>
    <dict>
      <key>Hour</key>
      <integer>7</integer>
      <key>Minute</key>
      <integer>0</integer>
    </dict>
    <key>EnvironmentVariables</key>
    <dict>
      <key>PATH</key>
      <string>$PATH</string>
      <key>XDG_CONFIG_HOME</key>
      <string>$XDG_CONFIG_HOME</string>
      <key>XDG_DATA_HOME</key>
      <string>$XDG_DATA_HOME</string>
      <key>XDG_CACHE_HOME</key>
      <string>$XDG_CACHE_HOME</string>
    </dict>
  </dict>
</plist>
