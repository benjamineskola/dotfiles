eval "$($HOME/.config/scripts/xdg.sh)"

test -e "$XDG_CONFIG_HOME/fish/conf.d/environment.fish" &&
  . "$XDG_CONFIG_HOME/fish/conf.d/environment.fish"

if [ "$TERM" = vt100 ]; then
  # probably bsd over ssh
  export TERM=xterm-256color
fi

stty erase ^?

alias ls='ls -hpT'
alias ll='ls -l'
alias la='ls -a'
alias lal='ls -la'
alias lsd='ls -d'

export HISTFILE="$XDG_CACHE_HOME/.history"
