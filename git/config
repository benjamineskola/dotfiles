[branch]
	autosetuprebase = always
[color]
	diff = auto
	status = auto
	branch = auto
[commit]
	template = ~/.config/git/git_commit_template
[core]
	excludesfile = ~/.config/git/gitignore.global
	pager = delta --max-line-length=0 --syntax-theme='Monokai Extended'
	quotepath = off
[delta]
	line-numbers = true
[diff]
	renames = copy
[format]
	pretty = %C(auto)%h%Creset %C(auto)%d%Creset %s %C(auto,cyan)(%ad) %C(auto,magenta)<%an>%Creset
[hub]
	protocol = https
[init]
	templatedir = ~/.config/git/template
	defaultBranch = main
[interactive]
	diffFilter = delta --color-only --max-line-length=0 --syntax-theme='Monokai Extended'
[log]
	abbrevCommit = true
	decorate = true
[merge]
	tool = smerge
[mergetool]
	prompt = false
	keepBackup = false
[mergetool "smerge"]
	cmd = smerge mergetool \"$BASE\" \"$LOCAL\" \"$REMOTE\" -o \"$MERGED\"
	trustExitCode = true
[pull]
	rebase = true
[push]
	default = current
	autoSetupRemote = true
[rebase]
	autoStash = true
	autosquash = true
	updateRefs = true
[status]
	short = true
	branch = true
[rerere]
	enabled = true
