ruby-install() {
    RUBY_TMP=$(mktemp -d)
    if brew --prefix capstone >/dev/null 2>&1; then
        export CXXFLAGS="-I$(brew --prefix capstone)/include"
        export LDFLAGS="-L$(brew --prefix capstone)/lib"
    fi
    command ruby-install -r "$RUBIES_DIR" -s "$RUBY_TMP" "$*" -- --enable-shared
}
